<%- include('partials/user-profile_header.ejs') %>

    <!-- Create a card for showing the user data -->
    <div class="container mt-5 mb-5">
        <div class="row register-page-format">
            <div class="col-sm-12 mx-auto">
                <div class="card">
                    <div class="card-body">

                        <!-- Display user profile picture; if user did -->
                        <!-- not use OAuth to sign or does not have picture, -->
                        <!-- use default profile image -->
                        <form action="/user_profile" method="post">
                            <div class="mt-3 mb-3" id="profile-container">
                                <img id="profileImage" src=<%= user.picture %> alt="Image not Found" onerror=this.src="images/default_pic.png">
                            </div>
                        </form>

                        <!-- Display user name and status -->
                        <h1>Welcome,&nbsp;<%= user.firstName %>.</h1>
                        <h3>Status: Volunteer</h3>

                        <!-- Create a div for two inline buttons in the user profile -->
                        <div class="mt-4 mb-4 btn-group d-flex special" role="group" aria-label="...">
                            
                            <!-- Add a button for the user to find events -->
                            <div>
                                <form action="/home" method="POST">
                                    <div class="inner">
                                        <button type="submit" class="btn btn-outline-dark btn-block w-100">View Different Events</button>
                                    </div>
                                </form>
                            </div>
                            
                            <!-- Add a button for the user to see their history -->
                            <div>
                                <form action="" method=""> <!-- ADD A LINK TO THIS LATER!!! -->
                                    <div class="inner">
                                        <button type="submit" class="btn btn-outline-dark btn-block w-100">See Event History</button>
                                    </div>
                                </form>
                            </div>

                        </div>

                        <!-- This represents the main content based on what is selected in the nav -->
                        <section class="border">
                            <h1>My Events</h1>
                            <ul>
                                <li class="border-bottom">
                                    <p>Name: </p>
                                    <p>Date/Time: </p>
                                    <p>Location: </p>
                                </li>
                                <li class="border-bottom">
                                    <p>Name: </p>
                                    <p>Date/Time: </p>
                                    <p>Location: </p>
                                </li>                    
                                <li>
                                    <p>Name: </p>
                                    <p>Date/Time: </p>
                                    <p>Location: </p>
                                </li>
                            </ul>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back button -->
    <div class="container">
        <form action="/back" method="POST">
            <div>
                <button type="submit" class="btn btn-lg btn-outline-dark"><i class="fas fa-arrow-left"></i> Back</button>
            </div>
        </form>
    </div>

    <!-- Logout button -->
    <div class="mt-4 mb-4">
        <form action="/logout" method="POST">
            <div>
                <button type="submit" class="btn btn-lg btn-dark">Logout</button>
            </div>
        </form>
    </div>

