                            <div>
                                <form action="/find_events" method="POST">
                                    <div class="inner">
                                        <button type="submit" class="btn btn-outline-dark btn-block w-100">View Different Events</button>
                                    </div>
                                </form>
                            </div>

                            <!-- Add a button to create a new PROGRAM !!! THIS WILL BE LATER ON IN THE COURSE -->
                            <div>
                                <form action="" method="">
                                    <div class="inner">
                                        <button type="submit" class="btn btn-outline-dark btn-block w-100">Create New Program</button>
                                    </div>
                                </form>
                            </div>

                            <!-- Add a button to create a new EVENT !!!-->
                            <div>
                                <form action="/create_event" method="POST">
                                    <div class="inner">
                                        <button type="submit" class="btn btn-outline-dark btn-block w-100">Create New Event</button>
                                    </div>
                                </form>
                            </div>
                            
                            <!-- Add a button for the user to see their HISTORY !!! THIS WILL BE LATER ON IN THE COURSE -->
                            <div>
                                <form action="" method="">
                                    <div class="inner">
                                        <button type="submit" class="btn btn-outline-dark btn-block w-100">See Event History</button>
                                    </div>
                                </form>
                            </div>

                        </div>

